<% if @ssl %>
ListenHTTPS
<% else %>
ListenHTTP
<% end -%>
  Address   <%= scope.lookupvar('address') %>
  Port      <%= scope.lookupvar('port') %>
  <%- if @ssl -%>
  Cert      "<%= scope.lookupvar('certificate') %>"
  <% end -%>
  <%- if @http_verbs -%>
  xHTTP     "<%= scope.lookupvar('http_verbs') %>"
  <% end -%>
  <%= scope.function_template(['pound/service.erb']) %>

End
